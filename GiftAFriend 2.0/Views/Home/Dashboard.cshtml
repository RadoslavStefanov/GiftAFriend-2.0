@{Layout = "_Layout";}
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> userManager
<style>
    .carousel-item img 
    {
        margin: auto;
        width: 70%;
        height: 40rem;
        border-radius: 20px;
    }
</style>

<div id="carouselExampleControls" class="carousel slide" style="max-width: 80%;margin: auto;min-width: 80%;max-height: 60%;min-height: 60%;padding-top: 20px;" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/banner1.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/referPNG.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/speedPNG.png" alt="Forth slide">
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <h3 style="margin-top:10px;text-align:center; color:#1e77d6;">Welcome back @userManager.GetUserName(User).ToUpper()</h3>
    <p style="text-align:center; color:#869099;">
        GaF is a young but fast growing community of likeminded users. Here you can communicate, exchange gifts or share any special moments. Feel free to look around. GiftAFriend is made for YOU! If there is any questions don't hesitate to reach us trough our contacts.
    </p>
</div>

<script>
        window.addEventListener('load', (event) => 
        {
            if("@ViewBag.IsRestricted"=="True")
            {alert("Вие сте в режим на ограничен потребител. Голяма част от фукнционалността на приложението няма да бъде достъпна за Вас. Ако се нуждаете от достъп се свържете с администратор!");}
        });
</script>