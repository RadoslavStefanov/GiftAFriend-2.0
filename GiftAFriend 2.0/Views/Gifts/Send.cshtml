<img src= "~/img/giftSendBanner.png" style="max-width:100%;max-height:420px; margin:auto; display:block;"/>

<div class="card card-info" style="margin:20px;">
    <div class="card-header" style="background-color:#233862">
        <h3 class="card-title">Make your friend happy</h3>
    </div>

    <form class="form-horizontal" method=post>
        <div class="card-body">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label"><p style="color:red;display: contents;">*</p>Mobile number:</label>
                <div class="col-sm-10">
                    <input class="form-control" name="PhoneNumber" placeholder="Mobile number...">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label"><p style="color:red;display: contents;">*</p>Amount:</label>
                <div class="col-sm-10">
                    <input  class="form-control" name="Amount" placeholder="0.00">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Message:</label>
                <div class="col-sm-10">
                    <input class="form-control" name="Message" placeholder="Gift message...">
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-info">Send</button>
        </div>
    </form>
</div>

@if(ViewBag.ToastrCommands!=null)
{<script>@ViewBag.ToastrCommands.ToString()</script>}